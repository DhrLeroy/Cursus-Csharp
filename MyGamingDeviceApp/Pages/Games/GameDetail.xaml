<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyGamingDeviceApp.Pages.Games.GameDetail"
             Title="GameDetail">
    <VerticalStackLayout>
        <Label Text="{Binding Titel}" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding Genre}" FontSize="18" TextColor="Gray" />
        <Label Text="{Binding Rating, StringFormat='⭐ {0:F1}/10'}"
               FontSize="16"
               TextColor="DarkGoldenrod" />
    </VerticalStackLayout>
</ContentPage>