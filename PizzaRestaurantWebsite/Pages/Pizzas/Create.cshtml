@page
@using PizzaRestaurantWebsite.Klassen
@model PizzaRestaurantWebsite.Pages.Pizzas.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pizza.Naam" class="control-label"></label>
                <input asp-for="Pizza.Naam" class="form-control" />
                <span asp-validation-for="Pizza.Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.Prijs" class="control-label"></label>
                <input asp-for="Pizza.Prijs" class="form-control" />
                <span asp-validation-for="Pizza.Prijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.Maat" class="control-label"></label>
                <select asp-for="Pizza.Maat" class="form-control" >
                    @foreach(var maat in Enum.GetValues<Maat>())
                    {
                        <option value="@maat">@maat</option>
                    }
                </select>
                <span asp-validation-for="Pizza.Maat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
