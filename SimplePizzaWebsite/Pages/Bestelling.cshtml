@page
@model BestellingModel
@{
    ViewData["Title"] = "Bestelling";
}
<p>Nieuwe bestelling: </p>
<form method="post">
    <p>E-mailadres: <input asp-for="Bestelling.Emailadres" /></p>
    <ul>
        @for(int i = 0; i < Model.Bestelling.Bestellijnen.Count; i++)
        {
            <li>
                @Model.Bestelling.Bestellijnen[i].Pizza.Naam: <input asp-for="Bestelling.Bestellijnen[i].Pizza.Id" hidden/> <input asp-for="Bestelling.Bestellijnen[i].Aantal" />
            </li>
        }
)
    </ul>
    <input type="submit" value="Bestelling plaatsen"/>
</form>