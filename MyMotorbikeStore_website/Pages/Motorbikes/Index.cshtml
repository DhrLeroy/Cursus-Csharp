            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motorbike[0].Gewicht_kg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motorbike[0].Merk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motorbike[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motorbike[0].Productiedatum)
            </th>
            <th>
